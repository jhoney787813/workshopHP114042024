<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pefil.ProfileFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="CARLOZ SANTANA"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/txtTitulo"
            android:layout_marginTop="16dp"
            android:text="@string/profile_description"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/txtDescripcion"
            android:layout_marginTop="16dp"
            android:text="21 aÃ±os"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/txtEdad"
            android:layout_marginTop="16dp"
            android:text="medellin"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="247dp"
            android:layout_height="263dp"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/santa"
            />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:visibility="invisible" />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>